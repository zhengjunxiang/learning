{
  "name": "i18n-helper",
  "displayName": "i18n-helper",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "i18n-helper",
      "properties": {
        "i18n-helper.showTip": {
          "type": "boolean",
          "default": true,
          "description": "是否在每次启动时显示欢迎提示！"
        }
      }
    },
    "commands": [
      {
        "command": "i18n-helper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "chineseSearch.search",
        "title": "Search Chinese Characters"
      }
    ],
    "keybindings": [
      {
        "command": "i18n-helper.helloWorld",
        "key": "ctrl+f10",
        "mac": "cmd+f10",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "i18n-helper.helloWorld",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chineseSearchBar",
          "title": "Search Chinese",
          "icon": "public/icons8.svg"
        }
      ]
    },
    "views": {
      "chineseSearchBar": [
        {
          "id": "view1",
          "name": "Search Chinese"
        }
      ],
      "explorer": [
        {
          "id": "chineseSearch",
          "name": "Chinese Search Results"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
