{
  "manifest_version": 3,
  "name": "i18nKey 助手",
  "version": "1.0",
  "description": "18nKey收集、展示和管理",
  "permissions": ["activeTab", "webNavigation", "storage"],
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.sankuai.com/*",
        "http://*.meituan.com/*",
        "https://*.sankuai.com/*",
        "https://*.meituan.com/*",
        "*://localhost:*/*"
      ],
      "run_at": "document_end",
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
