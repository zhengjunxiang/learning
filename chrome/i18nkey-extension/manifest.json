{
  "manifest_version": 3,
  "name": "I18nKeyStyleInjector",
  "version": "1.0",
  "description": "Inject styles for i18nKey",
  "permissions": ["activeTab", "webNavigation", "storage"],
  "action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
